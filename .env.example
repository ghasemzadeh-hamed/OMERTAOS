# Base gateway configuration
AION_GATEWAY_PORT=8080
AION_GATEWAY_HOST=0.0.0.0
AION_GATEWAY_API_KEYS=demo-key:admin|manager
AION_CONTROL_GRPC=control:50051
AION_REDIS_URL=redis://redis:6379
AION_RATE_LIMIT_MAX=60
AION_RATE_LIMIT_PER_IP=30
AION_RATE_LIMIT_WINDOW=1 minute
AION_IDEMPOTENCY_TTL=900

# Control plane
AION_CONTROL_API_PREFIX=/v1
AION_CONTROL_REDIS_URL=redis://redis:6379/0
AION_DB_USER=aion
AION_DB_PASSWORD=aion
AION_DB_NAME=aion
AION_CONTROL_POSTGRES_DSN=postgresql://aion:aion@postgres:5432/aion
AION_CONTROL_MONGO_DSN=
AION_CONTROL_QDRANT_URL=http://qdrant:6333
AION_CONTROL_MODELS_DIRECTORY=/data/models
AION_CONTROL_POLICIES_DIRECTORY=/policies
TENANCY_MODE=single

# Object storage and vector db
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniosecret
MINIO_BUCKET=aion-raw
QDRANT_URL=http://qdrant:6333

# Console configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-change-me
NEXT_PUBLIC_GATEWAY_URL=http://localhost:8080
NEXT_PUBLIC_CONTROL_URL=http://localhost:8000

# Optional providers
OPENAI_API_KEY=
