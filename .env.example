# ---------------------------------------------------------------------------
# Native installation defaults
# ---------------------------------------------------------------------------
APP_ENV=production
APP_HOST=0.0.0.0

# Service ports
GATEWAY_PORT=3000
CONTROL_PORT=8000
CONSOLE_PORT=3001

# Database configuration
DATABASE_URL=postgresql://omerta:CHANGE_ME@127.0.0.1:5432/omerta_db

# Redis configuration
REDIS_URL=redis://127.0.0.1:6379/0

# Secrets (replace in production)
SECRET_KEY=PLEASE_CHANGE_TO_LONG_RANDOM
JWT_SECRET=PLEASE_CHANGE

# Logging
LOG_LEVEL=info

# ---------------------------------------------------------------------------
# Console (Next.js)
# ---------------------------------------------------------------------------
NEXT_PUBLIC_CONTROL_BASE=http://localhost:8000
NEXT_PUBLIC_AGENT_API_TOKEN=
CONTROL_BASE_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=dev-secret-change-me
NEXT_PUBLIC_GATEWAY_URL=http://localhost:3000
NEXT_PUBLIC_CONTROL_URL=http://localhost:8000

# Local LLM hosts (override if needed)
OLLAMA_HOST=http://127.0.0.1:11434
VLLM_HOST=http://127.0.0.1:8008
AIONOS_LOCAL_MODEL=llama3.2:3b
AIONOS_RAG_COLLECTION=demo-docs

# ---------------------------------------------------------------------------
# Gateway compatibility settings
# ---------------------------------------------------------------------------
AION_GATEWAY_PORT=3000
AION_GATEWAY_HOST=0.0.0.0
AION_GATEWAY_API_KEYS=demo-key:admin|manager
AION_CONTROL_GRPC=control:50051
AION_CONTROL_BASE=http://localhost:8000
AION_REDIS_URL=redis://127.0.0.1:6379
AION_RATE_LIMIT_MAX=60
AION_RATE_LIMIT_PER_IP=30
AION_RATE_LIMIT_WINDOW=1 minute
AION_IDEMPOTENCY_TTL=900
AION_TLS_REQUIRE_MTLS=false

# Control plane compatibility
AION_CONTROL_API_PREFIX=/v1
AION_CONTROL_REDIS_URL=redis://127.0.0.1:6379/0
AION_DB_USER=omerta
AION_DB_PASSWORD=CHANGE_ME
AION_DB_NAME=omerta_db
AION_CONTROL_POSTGRES_DSN=postgresql://omerta:CHANGE_ME@127.0.0.1:5432/omerta_db
AION_CONTROL_MONGO_DSN=
AION_CONTROL_QDRANT_URL=http://127.0.0.1:6333
AION_CONTROL_MODELS_DIRECTORY=/opt/omerta/models
AION_CONTROL_POLICIES_DIRECTORY=/opt/omerta/policies
TENANCY_MODE=single

# Object storage and vector db
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniosecret
MINIO_BUCKET=aion-raw
QDRANT_URL=http://127.0.0.1:6333

# Optional providers
OPENAI_API_KEY=
