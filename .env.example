# Kernel profile selection
AION_KERNEL_PROFILE=default
# AION_KERNEL_PROFILE=dev-qwen-coder    # (opt-in)

# LLM endpoints can be shared or separate
LLM_GATEWAY_URL=http://llm-gateway:8008/v1/chat/completions

# Orchestrator config (small model)
ORCH_PROVIDER=api          # api | local | disabled
ORCH_MODEL=phi-3-mini      # or Qwen2.5-0.5B-Instruct
ORCH_ENDPOINT=${LLM_GATEWAY_URL}
ORCH_API_KEY=

# Coder config (Qwen2.5-Coder)
CODER_PROVIDER=api         # api | local | disabled
CODER_MODEL=Qwen2.5-Coder-7B-Instruct
CODER_ENDPOINT=${LLM_GATEWAY_URL}
CODER_API_KEY=

# Auxiliary control-plane modules
# Vault integration (render secrets once, then reuse files)
VAULT_ENABLED=false
VAULT_ADDR=http://127.0.0.1:8200
VAULT_AUTH_METHOD=token
VAULT_TOKEN=root
AION_VAULT_TOKEN=

# QuickStart control-plane configuration (no Vault required)
APP_ROOT=/opt/omerta
APP_DIR=${APP_ROOT}/OMERTAOS
TENANCY_MODE=single
AION_CONTROL_DISABLE_SECRETS=1
AION_CONTROL_HTTP_HOST=0.0.0.0
AION_CONTROL_HTTP_PORT=8000
AION_DB_USER=aionos
AION_DB_PASSWORD=password
AION_DB_NAME=omerta_db
AION_CONTROL_POSTGRES_DSN=postgresql://aionos:password@postgres:5432/omerta_db?schema=public
AION_ENABLE_PRISMA=1
DATABASE_URL=postgresql://aionos:password@postgres:5432/omerta_db?schema=public
AION_CONTROL_MONGO_DSN=mongodb://mongo:27017/aionos?retryWrites=true&w=majority
AION_CONTROL_REDIS_URL=redis://redis:6379/0
AION_CONTROL_QDRANT_URL=http://qdrant:6333
AION_CONTROL_MINIO_ENDPOINT=minio:9000
AION_CONTROL_MINIO_ACCESS_KEY=minio
AION_CONTROL_MINIO_SECRET_KEY=miniosecret
AION_CONTROL_MINIO_BUCKET=aion-raw
AION_CONTROL_MINIO_SECURE=0
AION_CONTROL_MODELS_DIRECTORY=${APP_DIR}/models
AION_CONTROL_POLICIES_DIRECTORY=${APP_DIR}/policies
AION_CONTROL_API_PREFIX=/api

# QuickStart secrets when Vault is disabled
AION_GATEWAY_API_KEYS=demo-key:admin|manager
AION_GATEWAY_API_KEYS_SECRET_PATH=
AION_GATEWAY_ADMIN_TOKEN=dev-admin-token
AION_GATEWAY_ADMIN_TOKEN_SECRET_PATH=
AION_ADMIN_TOKEN=dev-admin-token
AION_ADMIN_TOKEN_SECRET_PATH=
AION_JWT_PUBLIC_KEY=
AION_JWT_SECRET_PATH=
AION_REDIS_URL=redis://redis:6379/0
AION_GATEWAY_HOST=0.0.0.0
AION_GATEWAY_PORT=8080
AION_CONTROL_GRPC=http://control:50051
AION_CONTROL_BASE_URL=http://control:8000
AION_CONTROL_CORS_ORIGINS=http://localhost:3000
AION_CORS_ORIGINS=http://localhost:3000
AION_RATE_LIMIT_MAX=1000
AION_RATE_LIMIT_PER_IP=true
AION_RATE_LIMIT_WINDOW=60
AION_IDEMPOTENCY_TTL=900

AION_ALLOWED_PATHS=/models:/data:/logs:/config
AIONOS_LOCAL_MODEL=llama3.2:3b
AION_TELEMETRY_OPT_IN=false
AION_TELEMETRY_ENDPOINT=http://localhost:4317
AION_MODEL_REGISTRY=config/model-registry.json
AION_DATASET_REGISTRY=config/datasets.json
AION_PACKAGE_REGISTRY=config/packages/registry.json
AION_PACKAGE_STATE=config/packages/installed.json
AION_BACKUP_DIR=backups
AION_BACKUP_TARGET=backups
AION_BACKUP_HISTORY=backups/history.json
AION_SERVICE_CONTROL_MODE=disabled   # docker | systemd | script | disabled
AION_SERVICE_CONTROL_SCRIPT=
AION_DOCKER_COMPOSE_FILE=docker-compose.yml
AION_LOG_STREAMS=
AION_METRICS_ENABLED=1
AION_METRICS_PROM_URL=
AION_UPDATE_FEED_URL=
AION_UPDATE_SCRIPT=scripts/update.sh
AION_GATEWAY_HEALTH_URL=http://localhost:8080/healthz
AION_CONTROL_HEALTH_URL=http://localhost:8000/healthz
AION_CONSOLE_HEALTH_URL=http://localhost:3000/healthz
AION_KERNEL_HEALTH_URL=http://kernel:7000/healthz
AION_DEFAULT_ROLES=ROLE_USER

# Console env vars
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-change-me
NEXT_PUBLIC_GATEWAY_URL=http://gateway:8080
NEXT_PUBLIC_CONTROL_URL=http://control:8000
NEXT_PUBLIC_TELEMETRY_OPT_IN=${AION_TELEMETRY_OPT_IN}
NEXT_PUBLIC_PROM_URL=
SECRET_PROVIDER_MODE=local
CONSOLE_ADMIN_EMAIL=admin@local
CONSOLE_ADMIN_PASSWORD=admin123
SKIP_CONSOLE_SEED=false

# ── API (یکی را انتخاب کن) ─────────────────────────────
# Moonshot API
K2_API_BASE_URL=https://api.moonshot.cn/v1
# یا OpenRouter
# K2_API_BASE_URL=https://openrouter.ai/api/v1

K2_API_KEY=sk-xxxx

