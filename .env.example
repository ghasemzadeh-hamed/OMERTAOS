# Kernel profile selection
AION_KERNEL_PROFILE=default
# AION_KERNEL_PROFILE=dev-qwen-coder    # (opt-in)

# LLM endpoints can be shared or separate
LLM_GATEWAY_URL=http://llm-gateway:8008/v1/chat/completions

# Orchestrator config (small model)
ORCH_PROVIDER=api          # api | local | disabled
ORCH_MODEL=phi-3-mini      # or Qwen2.5-0.5B-Instruct
ORCH_ENDPOINT=${LLM_GATEWAY_URL}
ORCH_API_KEY=

# Coder config (Qwen2.5-Coder)
CODER_PROVIDER=api         # api | local | disabled
CODER_MODEL=Qwen2.5-Coder-7B-Instruct
CODER_ENDPOINT=${LLM_GATEWAY_URL}
CODER_API_KEY=

# Auxiliary control-plane modules
AION_ALLOWED_PATHS=/models:/data:/logs:/config
AION_CONTROL_MODELS_DIRECTORY=./models
AIONOS_LOCAL_MODEL=llama3.2:3b
AION_TELEMETRY_OPT_IN=false
AION_TELEMETRY_ENDPOINT=http://localhost:4317
AION_MODEL_REGISTRY=config/model-registry.json
AION_DATASET_REGISTRY=config/datasets.json
AION_PACKAGE_REGISTRY=config/packages/registry.json
AION_PACKAGE_STATE=config/packages/installed.json
AION_BACKUP_DIR=backups
AION_BACKUP_TARGET=backups
AION_BACKUP_HISTORY=backups/history.json
AION_SERVICE_CONTROL_MODE=disabled   # docker | systemd | script | disabled
AION_SERVICE_CONTROL_SCRIPT=
AION_DOCKER_COMPOSE_FILE=docker-compose.yml
AION_LOG_STREAMS=
AION_METRICS_ENABLED=1
AION_METRICS_PROM_URL=
AION_UPDATE_FEED_URL=
AION_UPDATE_SCRIPT=scripts/update.sh
AION_GATEWAY_HEALTH_URL=http://gateway:8080/healthz
AION_CONTROL_HEALTH_URL=http://control:8000/healthz
AION_CONSOLE_HEALTH_URL=http://console:3000/api/healthz
AION_KERNEL_HEALTH_URL=http://kernel:7000/healthz
AION_DEFAULT_ROLES=ROLE_USER

# Console env vars
NEXT_PUBLIC_CONTROL_BASE=http://localhost:8000
NEXT_PUBLIC_TELEMETRY_OPT_IN=${AION_TELEMETRY_OPT_IN}
NEXT_PUBLIC_PROM_URL=

# ── API (یکی را انتخاب کن) ─────────────────────────────
# Moonshot API
K2_API_BASE_URL=https://api.moonshot.cn/v1
# یا OpenRouter
# K2_API_BASE_URL=https://openrouter.ai/api/v1

K2_API_KEY=sk-xxxx

# مدل‌ها (مطابق Provider پر کن)
# Moonshot نمونه:
# K2_INSTRUCT_MODEL_ID=kimi-k2-instruct
# K2_THINKING_MODEL_ID=kimi-k2-thinking
# OpenRouter نمونه (در صفحه مدل‌ها ببین):
# K2_INSTRUCT_MODEL_ID=moonshotai/kimi-k2
# K2_THINKING_MODEL_ID=moonshotai/kimi-k2-thinking

# ── Local ───────────────────────────────────────────────
K2_LOCAL_BASE_URL=http://k2-local:8000/v1
K2_LOCAL_INSTRUCT_MODEL=k2-instruct-local
K2_LOCAL_THINKING_MODEL=k2-thinking-int4
