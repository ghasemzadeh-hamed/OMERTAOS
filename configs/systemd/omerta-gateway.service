[Unit]
Description=OMERTA Gateway (Node)
After=network.target

[Service]
User=omerta
Group=www-data
WorkingDirectory=/opt/omerta/OMERTAOS/gateway
EnvironmentFile=/opt/omerta/OMERTAOS/.env
Environment=PATH=/usr/local/bin:/usr/bin:/bin
Environment=NODE_ENV=production
ExecStart=/usr/bin/env node /opt/omerta/OMERTAOS/gateway/dist/index.js
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
