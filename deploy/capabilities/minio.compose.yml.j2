services:
  minio:
    image: minio/minio:latest
    restart: unless-stopped
    command: server /data --console-address ":{{MINIO_CONSOLE}}"
    ports:
      - "{{MINIO_PORT}}:9000"
      - "{{MINIO_CONSOLE}}:{{MINIO_CONSOLE}}"
    environment:
      MINIO_ROOT_USER: "{{MINIO_ROOT_USER}}"
      MINIO_ROOT_PASSWORD: "{{MINIO_ROOT_PASSWORD}}"
    volumes:
      - "{{MINIO_DATA_DIR}}:/data"
