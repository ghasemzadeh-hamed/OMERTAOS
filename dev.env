# Development defaults for quickstart. Replace placeholder secrets before production use.
AION_ENV=dev
AION_PROFILE=user

# Database
AION_DB_USER=aion
AION_DB_PASSWORD=aion
AION_DB_NAME=aion
AION_CONTROL_POSTGRES_DSN=postgresql://aion:aion@postgres:5432/aion
AION_CONTROL_MONGO_DSN=mongodb://mongo:27017/aionos?retryWrites=true&w=majority

# Caches and vector stores
AION_CONTROL_REDIS_URL=redis://redis:6379/0
AION_CONTROL_QDRANT_URL=http://qdrant:6333

# Object storage
AION_CONTROL_MINIO_ENDPOINT=minio:9000
AION_CONTROL_MINIO_ACCESS_KEY=minio
AION_CONTROL_MINIO_SECRET_KEY=miniosecret
AION_CONTROL_MINIO_BUCKET=aion-raw
AION_CONTROL_MINIO_SECURE=0

# Paths
AION_CONTROL_MODELS_DIRECTORY=/srv/app/models
AION_CONTROL_POLICIES_DIRECTORY=/srv/app/policies
AION_AGENT_CATALOG_DIR=/srv/app/agent_catalog
FEATURE_LATENTBOX_RECOMMENDATIONS=1
TENANCY_MODE=single
AION_CONTROL_DISABLE_SECRETS=1

# Gateway / auth
AION_GATEWAY_API_KEYS=DEV_SECRET_PLACEHOLDER:admin
AION_GATEWAY_ADMIN_TOKEN=DEV_SECRET_PLACEHOLDER
AION_ADMIN_TOKEN=DEV_SECRET_PLACEHOLDER
NEXTAUTH_SECRET=DEV_SECRET_PLACEHOLDER
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_GATEWAY_URL=http://localhost:8080
NEXT_PUBLIC_CONTROL_URL=http://localhost:8000
AION_GATEWAY_PORT=8080
AION_GATEWAY_HOST=0.0.0.0
AION_REDIS_URL=redis://redis:6379/0
AION_CONTROL_BASE_URL=http://control:8000
AION_CONTROL_API_PREFIX=/api

# TLS and telemetry
AION_TLS_REQUIRED=false
AION_TLS_REQUIRE_MTLS=false
AION_TELEMETRY_OPT_IN=false
AION_TELEMETRY_ENDPOINT=http://localhost:4317
